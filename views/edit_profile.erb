<div class="container">
  <h2 class="form-signin-heading">Edit Profile</h2>
  <% if @failed %>
  <h5><span class="label label-danger">Unable to edit profile.</span></h5>
  <hr>
  <% end %>
  <% if @edited %>
  <h5><span class="label label-success">Successfully edited user profile.</span></h5>
  <hr>
  <% end %>
  <form data-toggle="validator" role="form" action='/edit-profile' method='POST' enctype="multipart/form-data">
    <div class="form-group has-feedback">
      <label for="inputName" class="control-label">Name</label>
      <input type="text" name="real_name" class="form-control" id="inputName" placeholder="<%= @data[:real_name] %>" data-error="Please give us your real name! :)">
    </div>
    <div class="form-group has-feedback">
      <label for="inputName" class="control-label">Username</label>
      <input type="text" name="username" pattern="^[\w\d]{1,15}" class="form-control" id="userName" placeholder="<%= @data[:username] %>" data-error="You actually need a username...">
    </div>
    <div class="form-group has-feedback">
      <label for="inputEmail" class="control-label">Email</label>
      <input type="email" pattern="^[\w\d]{1,25}@emich.edu\b" name="email"  class="form-control" id="inputEmail" placeholder="<%= @data[:email] %>" data-error="Bruh, that email address is invalid">
      <div class="help-block with-errors"></div>
    </div>
    <div class="form-group has-feedback">
      <label for="inputPassword" class="control-label">New Password</label>
      <input type="password" name="new_password" class="form-control" id="inputPassword" placeholder="Password">
    </div>
    <div class="form-group has-feedback">
      <label for="inputPassword" class="control-label">Confirm New Password</label>
      <input type="password" class="form-control" id="inputPasswordConfirm" data-match="#inputPassword" data-match-error="Whoops, these don't match" placeholder="Confirm Password">
      <div class="help-block"></div>
    </div>
    <div class="form-group has-feedback">
      <label for="inputPassword" class="control-label">Current Password</label>
      <input type="password" name="current_password" class="form-control" id="inputPassword" placeholder="Password" required>
    </div>
    <div class="form-group has-feedback">
      <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
    </div>
  </form>
</div>
